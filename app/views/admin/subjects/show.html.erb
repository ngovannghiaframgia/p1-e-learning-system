<% provide :title, t(".show_subject") %>

<div class="container py-3">
  <div class="row">
    <div class="mx-auto col-sm-6">
      <div class="card">
        <div class="card-header">
          <h4 class="mb-0"><%= t ".edit_subject" %></h4>
        </div>
        <div class="card-body">
          <%= form_for @subject, url: "#" do |f| %>
            <div class="form-group row">
              <%= f.label :name_subject, t(".name_subject"), class: "col-lg-3 col-form-label form-control-label"  %>
              <div class="col-lg-9">
                <h4><%= @subject.name_subject %></h4>
              </div>
            </div>
            <div class="form-group row">
              <%= f.label :description, t(".description"), class: "col-lg-3 col-form-label form-control-label" %>
              <div class="col-lg-9">
                <h4><%= @subject.description %></h4>
              </div>
            </div>
            <div class="form-group row">
              <%= f.label :created_at, t(".created_at"), class: "col-lg-3 col-form-label form-control-label" %>
              <div class="col-lg-9">
                <h4><%= @subject.created_at %></h4>
              </div>
            </div>
            <div class="form-group row">
              <%= f.label :updated_at, t(".updated_at"), class: "col-lg-3 col-form-label form-control-label" %>
              <div class="col-lg-9">
                <h4><%= @subject.updated_at %></h4>
              </div>
            </div>
            <div class="form-group row">
              <label class="col-lg-3 col-form-label form-control-label"></label>
              <div class="col-lg-9">
                <%= link_to t("back"), admin_subjects_path, class: "btn btn-secondary" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
