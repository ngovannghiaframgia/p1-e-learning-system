<%= form_for @course, url: yield(:path_form), html: {class: "form"}, method: yield(:method_form), local: true do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="form-group row">
    <%= f.label :course_name, t(".course_name"), class: "col-lg-3 col-form-label form-control-label"  %>
    <div class="col-lg-9">
      <%= f.text_field :course_name, class: "form-control", placeholder: t(".placeholder_course_name") %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :subject, t(".subject"), class: "col-lg-3 col-form-label form-control-label" %>
    <div class="col-lg-9">
      <%= f.select :subject, options_for_select(@list_subjects,
      selected: @course),
      { }, { class: "form-control" } %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-lg-3 col-form-label form-control-label"></label>
    <div class="col-lg-9">
      <%= link_to t("cancel"), admin_courses_path, class: "btn btn-secondary" %>
      <%= f.button yield(:button_text), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
