<div class="row">
  <div class="breadcrumbs">
    <div class="col-sm-4">
      <div class="page-header float-left">
        <div class="page-title">

            <h1><%=link_to t("lessons.index.new_lessons"), new_admin_lesson_path, class: "btn btn-outline-success" %></h1>

        </div>
      </div>
    </div>
    <div class="col-sm-8">
      <div class="page-header float-right">
        <div class="page-title">
          <ol class="breadcrumb text-right">
            <li><a href="#"></a></li>
          </ol>
        </div>
      </div>
    </div>
  </div>
  <div class="content mt-3">
    <div class="animated fadeIn">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header">
              <strong class="card-title"><%= t "lessons.index.lessons_list" %></strong>
            </div>
            <div class="table-responsive">
              <table style="text-align: center" id="bootstrap-data-table-export" class="table table-striped table-bordered">
                <thead>
                  <tr>
                    <th scope="col"><%= t "number" %></th>
                    <th scope="col"><%= t "lessons.index.title" %></th>
                    <th scope="col"><%= t "lessons.index.content" %></th>
                    <th scope="col"><%= t ".actions" %></th>
                  </tr>
                </thead>
                <tbody>
                  <% @lessons.each_with_index do |lesson, index| %>
                    <tr>
                      <th scope="row"><%= index+1 %></th>
                      <td><%= lesson.title %></td>
                      <td><%= lesson.content %></td>
                      <td>
                        <div class="icon-btn">
                          <%= link_to  admin_lesson_path(lesson), class: "btn btn-outline-primary btn-border-radius" do %>
                            <i class="fa fa-info-circle" aria-hidden="true"></i>
                          <% end %>
                        </div>
                        <div class="icon-btn">
                          <%= link_to  edit_admin_lesson_path(lesson), class: "btn btn-outline-info btn-border-radius" do %>
                            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                          <% end %>
                        </div>
                        <div class="icon-btn">
                          <%= link_to admin_lesson_path(lesson), method: :delete, data: {confirm: t(".you_sure")},
                            class: "btn btn-outline-danger btn-border-radius" do %>
                            <i class="fa fa-trash-o" aria-hidden="true"></i>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
              <%= paginate @lessons, theme: "twitter-bootstrap-4" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
