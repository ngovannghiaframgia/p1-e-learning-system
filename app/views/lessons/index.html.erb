
<div class="row">
  <div class="breadcrumbs">
    <div class="col-sm-4">
      <div class="page-header float-left">
        <div class="page-title">
          <h1><%= t "lessons.index.lessons_list" %></h1>
        </div>
      </div>
    </div>
    <div class="col-sm-8">
      <div class="page-header float-right">
        <div class="page-title">
          <ol class="breadcrumb text-right">
            <li><%= t "lessons.index.information" %></li>
            <li><%= t "lessons.index.lessons" %></li>
            <li class="active"><%= t "lessons.index.table" %></li>
          </ol>
        </div>
      </div>
    </div>
  </div>

  <div class="content mt-3">
    <div class="animated fadeIn">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header">
              <strong class="card-title"><%= t "lessons.index.lessons_list" %></strong>
            </div>
            <div style="text-align: center" class="card-body">
              <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                <thead>
                  <tr>
                    <th><%= t "lessons.index.title" %></th>
                    <th><%= t "lessons.index.content" %></th>
                    <th><%= t "lessons.index.acction" %></th>
                  </tr>
                </thead>
                <tbody>
                  <% @lessons.each do |lessons| %>
                    <tr>
                      <td><%= lessons.title %></td>
                      <td><%= lessons.content %></td>
                      <td style="">
                        <%= link_to do %>
                          <button class="btn btn-primary"><%= t "lessons.index.summary" %></button>
                        <% end %>
                        <%= link_to do %>
                          <button class="btn btn-info"><%= t "lessons.index.theory" %></button>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
              <%= paginate @lessons, theme: "twitter-bootstrap-4" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
