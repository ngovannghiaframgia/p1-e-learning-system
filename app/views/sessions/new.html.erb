<!DOCTYPE html>
<html>

<head>
  <% provide :title, t("Login") %>
</head>

<body>
  <div class="container">
    <div class="d-flex justify-content-center h-100">
      <div class="card">
        <div class="card-header">
          <h3><%= t "static_pages.login.login" %></h3>
          <div class="d-flex justify-content-end social_icon">
            <span><i class="fa fa-facebook-square"></i></span>
            <span><i class="fa fa-google-plus-square"></i></span>
            <span><i class="fa fa-twitter-square"></i></span>
          </div>
        </div>
        <div class="card-body">
          <%= form_for(:session, url: login_path) do |f| %>
            <div class="input-group form-group">
              <div class="input-group-prepend">
                <%= f.label :email, :class => "input-group-text" do %>
                  <i class="fa fa-user"></i>
                <% end %>
              </div>
              <%= f.email_field :email, class: "form-control", placeholder: "Email" %>

            </div>
            <div class="input-group form-group">
              <div class="input-group-prepend">
                <%= f.label :email, :class => "input-group-text" do %>
                  <i class="fa fa-key"></i>
                <% end %>
              </div>
              <%= f.password_field :password, class: "form-control", placeholder: t(".password") %>
            </div>

            <% flash.each do |message_type, message| %>
              <div class="alert alert-<%= message_type %>"><%= message %></div>
            <% end %>

            <div class="row align-items-center remember">
              <%= f.label :remember_me, class: "checkbox inline" do %>
              <%= f.check_box :remember_me %>
                <span><%= t "static_pages.login.Remember_Me" %></span>
              <% end %>
            </div>
            <div class="form-group">
              <%= f.submit t(".log_in"), class: "btn float-right login_btn" %>
            </div>
          <% end %>
        </div>
        <div class="card-footer">
          <div class="d-flex justify-content-center links">
            <%= t "static_pages.login.account" %>
            <%= link_to t(".static_pages.login.Sign_Up"), signup_path %>
          </div>
          <div class="d-flex justify-content-center">
            <%= link_to t "static_pages.login.Forgot_your_password" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
